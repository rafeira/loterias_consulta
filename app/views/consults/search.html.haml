.container
	%h1.title Lotofácil
	.subtitle Digite os numéros para fazer uma verificação
	%form{id: "search[form]", action: "#{root_path}"}
		.field.is-horizontal.mx-6
			-15.times do |i|
				%input.input.is-small.is-rounded{name: "#{i}", value: "#{@values[i]}"}
		%input.button.is-info{type: "submit", value:"Verificar"}
	-@errors.each do |error|
		.tag{style: "color: red;"}
			= error
		%br

	= render 'shared/consults/result', partial: true